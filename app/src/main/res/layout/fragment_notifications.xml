<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/first_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <ImageView
        android:id="@+id/h_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/h_back"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_line"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_main_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/user_line"
            android:text="username"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_infoactivity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/user_line"
            android:text="phone"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/sex_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_infoactivity_number"
            />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/h_back"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:text="抬头45°微笑的陈景周美眉在等待一个拥抱。"
            android:textSize="17sp"
            />
    </RelativeLayout>


    <com.example.worldtest.ui.notifications.ItemView
        android:id="@+id/bt_main_info"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:left_icon="@drawable/ic_nick_name"
        app:left_text="修改信息"
        />
    <com.example.worldtest.ui.notifications.ItemView
        android:id="@+id/self_signature"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:left_icon="@drawable/ic_signature"
        app:left_text="个性签名"/>
    <com.example.worldtest.ui.notifications.ItemView
        android:id="@+id/bt_main_moment"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:left_icon="@drawable/ic_sign_name"
        app:left_text="我的动态"/>
    <com.example.worldtest.ui.notifications.ItemView
        android:id="@+id/mycollect"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:left_icon="@drawable/ic_collect"
        app:left_text="我的收藏"/>

    <com.example.worldtest.ui.notifications.ItemView
        android:id="@+id/bt_main_setting"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:left_icon="@drawable/ic_about"
        app:left_text="设置"/>

    <com.example.worldtest.ui.notifications.ItemView
        android:id="@+id/bt_main_logout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:left_icon="@drawable/ic_logout"
        app:left_text="退出登录"/>

</LinearLayout>